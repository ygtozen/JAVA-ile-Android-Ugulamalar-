<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/buyukTansiyon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Büyük tansiyon gir."/>

    <EditText
        android:id="@+id/kucukTansiyon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Küçük tansiyon gir."/>

    <Button
        android:id="@+id/buttonEkle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ekle"/>


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.github.mikephil.charting.charts.BarChart>
</LinearLayout>